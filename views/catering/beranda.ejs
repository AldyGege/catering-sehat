        <!-- funcion category -->
        <script>
            function filterMenu(category) {
                // Ambil semua kartu menu
                const cards = document.querySelectorAll('.card-kategori');

                // Jika 'all' dipilih, tampilkan semua kartu
                if (category === 'all') {
                    cards.forEach(card => {
                        card.classList.remove('hidden');
                    });
                } else {
                    // Jika kategori tertentu dipilih, sembunyikan semua kecuali kategori yang dipilih
                    cards.forEach(card => {
                        if (card.classList.contains(category)) {
                            card.classList.remove('hidden');
                        } else {
                            card.classList.add('hidden');
                        }
                    });
                }

                // Ubah warna button yang aktif
                const buttons = document.querySelectorAll('.nav-category button');
                buttons.forEach(button => {
                    if (button.innerText.toLowerCase() === category || (category === 'all' && button.innerText.toLowerCase() === 'semua')) {
                        button.classList.remove('btn-outline-primary');
                        button.classList.add('btn-primary');
                    } else {
                        button.classList.remove('btn-primary');
                        button.classList.add('btn-outline-primary');
                    }
                });
            }
        </script>

        <!-- function flashsale -->
        <script>
            // Script to handle quantity increment and decrement for all input groups
            document.querySelectorAll('.input-group').forEach(function (inputGroup) {
                const plusButton = inputGroup.querySelector('.btn-plus');
                const minusButton = inputGroup.querySelector('.btn-minus');
                const quantityInput = inputGroup.querySelector('.quantity-input');
        
                plusButton.addEventListener('click', function () {
                    let value = parseInt(quantityInput.value);
                    quantityInput.value = value + 1;
                });
        
                minusButton.addEventListener('click', function () {
                    let value = parseInt(quantityInput.value);
                    if (value > 1) {
                        quantityInput.value = value - 1;
                    }
                });
            });
        </script>
        

